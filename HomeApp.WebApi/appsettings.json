{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      { "Name":  "File", "Args":  { "path":  "Logs/log.txt" }  }
    ] 
  },
  "AllowedHosts": "*",
  "AuthSettings": {
    "Authority": "http://sso.server.home/auth/realms/master",
    "Audience": "account"
  },
  "WeatherSettings": {
    "ApiUrl": "https://api.openweathermap.org/data/2.5/onecall",
    "Units": "metric",
    "Exclude": "minutely",
    "Language": "ru"
  },
  "DbSettings": {
    "Host": "",
    "Port": "",
    "Database": "" 
  } 
}
